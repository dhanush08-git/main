<% layout("/layouts/boilerplate") %>
 <style>
.filters-wrapper {
  display: flex;
  align-items: center;
  gap: 2rem;
  margin: 1.5rem;
}

/* Scrollable filters */
#filters {
  display: flex;
  overflow-x: auto;
  overflow-y: hidden;
  gap: 1.8rem;
  flex: 0 1 60%;   /* limits width */
  max-width: 60%;
  scroll-behavior: smooth;
  scrollbar-width: none;
}

#filters::-webkit-scrollbar {
  display: none;
}

.filter {
  flex: 0 0 auto;
  text-align: center;
  opacity: 0.7;
  min-width: 60px;
}

.filter:hover {
  opacity: 1;
  cursor: pointer;
}

.filter a {
  text-decoration: none;
  color: black;
}

.filter p {
  font-size: 0.8rem;
  margin: 0;
}

/* Toggle styling */
.tax-toggle {
  margin-left: auto;     /* pushes toggle right */
  border: 1px solid #ddd;
  border-radius: 25px;
  padding: 0.4rem 1rem;
  background: white;
}

.scroll-btn{
  background-color: transparent;
  border: none;
}


</style>

<div class="filters-wrapper">
