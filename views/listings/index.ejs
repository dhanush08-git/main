  <!-- Toggle -->
  <div class="tax-toggle">
    <div class="form-check form-switch">
      <input class="form-check-input" type="checkbox" id="switchCheckDefault">
      <label class="form-check-label">Display total after tax</label>
    </div>
  </div>

</div>

    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-1 mt-3">
      <% for(let listing of allListings){ %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
    <div class="card col listing-card">
  <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_img" style="height: 20rem;" >
